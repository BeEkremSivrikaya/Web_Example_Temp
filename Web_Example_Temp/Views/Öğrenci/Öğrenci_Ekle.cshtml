@{
    ViewData["Title"] = "Öğrenci_Ekle";
}

<h1>Öğrenci_Ekle</h1>

@model Öğrenci;

<form asp-controller="Öğrenci" asp-action="Öğrenci_Ekle" method="post">
    <div class="form-group mb-3">
        <label asp-for="Ad" class="control-label"></label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Soyad" class="control-label"></label>
        <input asp-for="Soyad" class="form-control" />
        <span asp-validation-for="Soyad" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="OkulId" class="control-label">Okul Adı</label>
        <select asp-for="OkulId" class="form-control" asp-items="ViewBag.Okullar"></select>
        <span asp-validation-for="OkulId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>



